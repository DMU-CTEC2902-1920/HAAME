@model IEnumerable<GameReview.Models.Game>

@{
    ViewBag.Title = "HAMME Game Review";
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
</style>

<div class="jumbotron">
    <h1>HAAME Game Review</h1>
    <p class="lead">The worlds leading website in all things game related</p>
    <img src="~/Images/cartoon-controller-png.png" height="200" width="200" />
</div>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Reviews</title>
</head>
<body>
    <p>
        @*@Html.ActionLink("Create New", "Create")*@
    </p>
    <table>
        <tr>
            <th>
                Game Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Console)
            </th>
            <th>
                Gnere
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ratings)
            </th>
            <th>
                Release Date
            </th>
            @*<th>
                Description
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Console)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameGenre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Developer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ratings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.GameID }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.GameID }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.GameID })*@
                    @Html.ActionLink("Create a Review", "Details", new { id = item.GameID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
